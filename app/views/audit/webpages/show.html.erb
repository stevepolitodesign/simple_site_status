<h1>Results for <%= @webpage.url %></h1>

<table id=<%= dom_id @webpage, :links %>>
  <thead>
    <tr>
      <th scope="col">Status</th>
      <th scope="col">Link</th>
      <th scope="col">Text</th>
    </tr>
  </thead>
  <tbody>
    <% @webpage.links do |link| %>
      <tr>
        <td><%= link.status.code %></td>
        <td><%= link.url %></td>
        <td><%= link.text %></td>
      </tr>
    <% end %>
  </tbody>
</table>
